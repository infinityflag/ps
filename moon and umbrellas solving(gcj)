#include <iostream>
#include <string>
#include <cstring>
#include <vector>
#include <algorihm>
using namespace std;

char ca[2] = {'C','J'};
vector<string> v;
int brute(string t){
	string s= t;
	for(int i=0;i<s.size();i++){
		if(s[i] == '?'){
			s[i] = ca[0];
		}
	}
	v.push_back(s);
	string s = t;
	for(int i=0;i<s.size();i++){
		if(s[i] == '?'){
			s[i] = ca[1];
		}
	}
	v.push_back(s);
}
int main() {
	int t;
	cin >>t;
	while(t--){
		int x,y;
		string s;
		cin >> x>>y>>s;
		brute(s);
		int ans = 0;
		for(int i=0;i<v.length();i++){
			for(int j=0;j<v[i].size();j++){
				if(v[i][j] == 'C' && v[i][j+1] == 'J'){
					ans += min(ans,x);
				}
			
			}
		}
	}
}
